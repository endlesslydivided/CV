{
  "compilerOptions": {
    "target": "ES6",                           // Выбираем ES6 для совместимости с современным JavaScript
    "module": "commonjs",                      // Используем систему модулей CommonJS (для Node.js)
    "strict": true,                             // Включаем строгую типизацию
    "esModuleInterop": true,                    // Включаем поддержку импорта модулей в стиле ES6
    "skipLibCheck": true,                       // Пропускаем проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true,   // Следим за согласованностью регистра имен файлов
    "outDir": "./dist",                         // Папка для скомпилированных файлов
    "rootDir": "./src",                         // Папка с исходным кодом
    "resolveJsonModule": true,                  // Разрешаем импорт JSON файлов
    "moduleResolution": "node",                 // Используем разрешение модулей Node.js
    "allowJs": true                             // Разрешаем использовать JavaScript в проекте
  },
  "include": [
    "src/**/*.ts"  // Включаем все файлы .ts в папке src
  ],
  "exclude": [
    "node_modules" // Исключаем папку node_modules
  ]
}
